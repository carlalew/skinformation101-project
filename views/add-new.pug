extends base

block content
    main.main
        .new-product-form
            h2.heading-secondary.ma-bt-lg Add New Product
            form.form--new-product
                .form__group
                    label.form__label(for='brand') Brand
                    input#brand.form__input(type='brand', placeholder='Environ', required)
                .form__group.ma-bt-md
                    label.form__label(for='name') Name
                    input#name.form__input(type='name', placeholder='Magic Potion', required)               
                .form__group.ma-bt-md
                    label.form__label(for='skinType') Skin Type
                    input#skinType.form__input(type='skinType', placeholder='Oily', required)
                .form__group.ma-bt-md
                    label.form__label(for='price') Price
                    input#price.form__input(type='number', placeholder='55', required)  
                .form__group.ma-bt-md
                    label.form__label(for='summary') Summary
                    input#summary.form__input(type='summary', placeholder='Brief description of product', required)  
                .form__group.ma-bt-md
                    label.form__label(for='description') Description
                    input#description.form__input(type='description', placeholder='Full description of product', required)
                .form__group.ma-bt-md
                    label.form__label(for='coverImage') Upload Cover Image
                    input#coverImage.form__input(type='coverImage', placeholder='test.jpg')                                                                                
                .form__group
                    button.btn.btn--green Create Product
                    