header.header
    nav.nav.nav--about-us
        a.nav__el(href='/about') About Us
    nav.nav.nav--products
        a.nav__el(href='/') Featured Products
        nav.nav.nav--blog
        a.nav__el(href='/blogs') Blog
    .header__logo
        img(src='/img/logo.png' alt='Skinformation101 Logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log Out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name
                                
        else
            a.nav__el(href='/login') Login
            a.nav__el(href='/signup') Sign Up